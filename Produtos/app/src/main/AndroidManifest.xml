<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.produtos">

    //Caso queira publicar o App na Play Store, não se deve pedir todas as permissões possíveis, pois eles não permitirão que o App seja publicado
    <uses-feature android:name="android.hardware.camera" android:required="true"/>  //declarando que estamos utilizando uma funcionalidade do celular
    <uses-permission android:name="android.permission.CAMERA"/>  //declarando permissão para usar camera
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18"/>  //declarando permissão para escrever em um storage externo

    <uses-permission android:name="android.permission.INTERNET"/>  //essa permissão já é suficiente para rodar a aplicação

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Produtos">
        <activity android:name=".activity.ViewProductActivity"></activity>
        <activity android:name=".activity.AddProductActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.example.produtos.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">

            </meta-data>
        </provider>
    </application>

</manifest>